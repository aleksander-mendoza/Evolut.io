#version 450


layout (local_size_x = 32) in;

struct Particle{
    vec3 position;
    float size;
    vec4 color;
};

layout(set = 0, binding = 0) buffer Particles{
    Particle particles[];
};

void main()
{
    //grab global ID
    uint gID = gl_GlobalInvocationID.x;
    particles[gID].position += vec3(0,0.01,0);
}

